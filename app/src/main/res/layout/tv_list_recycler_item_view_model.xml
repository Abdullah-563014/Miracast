<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_50sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/recyclerTvItemCastImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/recyclerTvItemNameTextView"
        android:src="@drawable/ic_launcher"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"/>
    <TextView
        android:id="@+id/recyclerTvItemNameTextView"
        app:layout_constraintStart_toEndOf="@+id/recyclerTvItemCastImageView"
        app:layout_constraintEnd_toStartOf="@+id/recyclerTvItemArrowRightImageView"
        android:gravity="start|center_vertical"
        android:text="@string/tv_item_name"
        android:paddingStart="@dimen/_20sdp"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/_16ssp"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>
    <ImageView
        android:id="@+id/recyclerTvItemArrowRightImageView"
        app:layout_constraintStart_toEndOf="@+id/recyclerTvItemNameTextView"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="@dimen/_15sdp"
        android:src="@drawable/arrow_right"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"/>
</androidx.constraintlayout.widget.ConstraintLayout>